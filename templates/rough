  <!-- JavaScript for Image Slideshow -->
  <script>
  
  
  function toggleEarnContent() {
      const content = document.getElementById('earnContent');
      content.style.display = content.style.display === "block" ? "none" : "block";
    }
    
    function toggleAboutContent() {
      const content = document.getElementById('aboutContent');
      content.style.display = content.style.display === "block" ? "none" : "block";
    }
    
    
    const images = document.querySelectorAll('.image-section img');
    const texts = document.querySelectorAll('.image-section .text');
    let currentIndex = 0;

    function showSlide(index) {
      images.forEach((img, i) => img.classList.toggle('active', i === index));
      texts.forEach((text, i) => text.classList.toggle('active', i === index));
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % images.length;
      showSlide(currentIndex);
    }

    setInterval(nextSlide, 3000);
    
    const machines = {
      vip: [
        { name: "IceRiver AE0", img: "images/iceriver_ae0.png", desc: "50 MH/S ± 5% | 100 W ± 5% | 2 J/MH", price: 1700, profit: 113.33 },
        
      ],
      premium: [
        { name: "Goldshell AE BOX II", img: "images/goldshell_ae_box_ii.png", desc: "54 MH/S ± 5% | 530 W ± 5% | 9.18 J/MH", price: 1400, profit: 133.33 },
        
      ],
      standard: [
        
        { name: "Basic Miner", img: "images/basic_miner.png", desc: "Budget-friendly miner. 12 MH/S | 180 W | 20 J/MH", price: 25, profit: 3.57 }
      ]
    };

    // Render Machines
    function loadMachines(category) {
      const container = document.getElementById(${category}-section);
      machines[category].forEach(machine => {
        const machineElement = document.createElement("div");
        machineElement.classList.add("machine", category);
        machineElement.innerHTML = `
          <h3>${machine.name}</h3>
          <img src="${machine.img}" alt="${machine.name}" style="width: 100%; border-radius: 8px; margin: 10px 0;">
          <p>${machine.desc}</p>
          <p>Price: $${machine.price}</p>
          <p>Profit: $${machine.profit}/day</p>
          <button onclick="buyMachine('${category}', '${machine.name}', '${machine.img}', ${machine.price})">Buy</button>
        `;
        container.appendChild(machineElement);
      });
    }

    // Load all categories
    ["vip", "premium", "standard"].forEach(loadMachines);
    
    function buyMachine(category, name, img, price) {
  // Redirect to signup page
  window.location.href = 'signup.html';
}

   
  </script>

